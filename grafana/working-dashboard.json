{
  "dashboard": {
    "id": null,
    "uid": "working-observability",
    "title": "Working Observability Dashboard",
    "tags": ["backend", "observability", "working"],
    "timezone": "browser",
    "time": {
      "from": "now-5m",
      "to": "now"
    },
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "title": "Total Requests (All)",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "datasource": {
              "type": "prometheus",
              "uid": "PBFA97CFB590B2093"
            },
            "expr": "sum(litestar_requests_total)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "palette-classic"
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Success Requests (200)",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 6,
          "y": 0
        },
        "targets": [
          {
            "datasource": {
              "type": "prometheus",
              "uid": "PBFA97CFB590B2093"
            },
            "expr": "litestar_requests_total{status_code=\"200\", path=\"/status/200\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "fixed",
              "fixedColor": "green"
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Error Requests (500)",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "datasource": {
              "type": "prometheus",
              "uid": "PBFA97CFB590B2093"
            },
            "expr": "litestar_requests_total{status_code=\"500\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "fixed",
              "fixedColor": "red"
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Passenger Processes",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 0
        },
        "targets": [
          {
            "datasource": {
              "type": "prometheus",
              "uid": "PBFA97CFB590B2093"
            },
            "expr": "passenger_process_count",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "fixed",
              "fixedColor": "blue"
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Request Rate (per minute)",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "datasource": {
              "type": "prometheus",
              "uid": "PBFA97CFB590B2093"
            },
            "expr": "rate(litestar_requests_total[1m])",
            "refId": "A",
            "legendFormat": "{{path}} ({{status_code}})"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        }
      },
      {
        "id": 6,
        "title": "Passenger Capacity",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "targets": [
          {
            "datasource": {
              "type": "prometheus",
              "uid": "PBFA97CFB590B2093"
            },
            "expr": "passenger_capacity_used",
            "refId": "A",
            "legendFormat": "Capacity Used"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      }
    ],
    "schemaVersion": 30,
    "version": 1
  },
  "overwrite": true
}